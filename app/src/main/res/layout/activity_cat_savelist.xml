<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CatForSavedListActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/logoGreen"
        android:elevation="0dp"
        android:fitsSystemWindows="true"
        app:elevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/homepage_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="0dp"
                app:title="UT"
                app:titleCentered="true"
                app:titleTextColor="@color/white" />
        </LinearLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <Button
        android:id="@+id/button_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Back"
        android:layout_marginTop="70dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:textStyle="bold"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tiltle_toy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/button_back"
        android:text="Toys: "
        android:textSize="10sp"
        android:textStyle="bold"
        android:layout_marginEnd="20dp"/>

    <TextView
        android:id="@+id/tiltle_art"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/tiltle_toy"
        android:text="Art and Crafts: "
        android:textSize="10sp"
        android:textStyle="bold"
        android:layout_marginEnd="20dp"/>

    <TextView
        android:id="@+id/tiltle_book"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/tiltle_art"
        android:text="Books and Magazines: "
        android:textSize="10sp"
        android:textStyle="bold"
        android:layout_marginEnd="20dp"/>

    <TextView
        android:id="@+id/tiltle_clothing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/tiltle_book"
        android:text="Clothing: "
        android:textSize="10sp"
        android:textStyle="bold"
        android:layout_marginEnd="20dp"/>

    <TextView
        android:id="@+id/tiltle_electronics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/tiltle_clothing"
        android:text="Electronics: "
        android:textSize="10sp"
        android:textStyle="bold"
        android:layout_marginEnd="20dp"/>

    <TextView
        android:id="@+id/tiltle_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/tiltle_electronics"
        android:text="Home and Garden: "
        android:textSize="10sp"
        android:textStyle="bold"
        android:layout_marginEnd="20dp"/>

    <TextView
        android:id="@+id/tiltle_travel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/tiltle_home"
        android:text="Travel: "
        android:textSize="10sp"
        android:textStyle="bold"
        android:layout_marginEnd="20dp"/>

    <TextView
        android:id="@+id/tiltle_beauty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/tiltle_travel"
        android:text="Health and Beauty: "
        android:textSize="10sp"
        android:textStyle="bold"
        android:layout_marginEnd="20dp"/>

    <TextView
        android:id="@+id/tiltle_else"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/tiltle_beauty"
        android:text="Everything else: "
        android:textSize="10sp"
        android:textStyle="bold"
        android:layout_marginEnd="20dp"/>




    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottomNavigationBar"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bottom_background"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="30dp"
        android:elevation="2dp"
        app:menu="@menu/bottom_menu"
        app:itemIconSize="36dp"
        app:itemIconTint="@drawable/item_selector"
        app:itemRippleColor="@android:color/transparent"
        app:labelVisibilityMode="unlabeled"/>

</RelativeLayout>